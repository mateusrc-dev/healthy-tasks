// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(uuid())
  email           String         @unique
  username        String
  typeUser        String
  photoUrl        String
  specializacion  String?
  description     String?
  complaint       String?
  Profilepublic   Boolean?
  StatisticPublic Boolean?
  profileForce    Int? // if the statistics are public, clicks on the 'force' button will be counted
  taskId          String
  password        String
  created_at      DateTime       @default(now())
  Task            Task[]
  commentUser     CommentUser[]
  favoriteTask    FavoriteTask[]
  BestTask        BestTask[]

  @@map("users")
}

model Task {
  id           String         @id @default(uuid())
  title        String
  description  String
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  //recipient      User           @relation(fields: [patientEmail], references: [email])
  patientEmail String
  carriedOut   Boolean        @default(false)
  isTaskPublic Boolean        @default(false)
  forceTask    Int // if the task are public, clicks on the 'force' button will be counted
  deadline     DateTime
  created_at   DateTime       @default(now())
  favoriteTask FavoriteTask[]
  comment      CommentUser[]
  BestTask     BestTask[]

  @@map("task")
}

model BestTask {
  id       String  @id @default(uuid())
  isPublic Boolean @default(false)
  user     User    @relation(fields: [userId], references: [id])
  userId   String
  bestTask Task    @relation(fields: [taskId], references: [id])
  taskId   String

  @@map("bestTask")
}

model CommentUser {
  id          String @id @default(uuid())
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      String
  task        Task   @relation(fields: [taskId], references: [id])
  taskId      String

  @@map("commentUser")
}

model FavoriteTask {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  task   Task   @relation(fields: [taskId], references: [id])
  taskId String

  @@map("favoriteTask")
}
